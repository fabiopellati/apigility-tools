{
  "name": "fabiopellati/apigility-tools",
  "description": "General tools for Apigility",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Fabio Pellati",
      "email": "fabio.pellati@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://fabiopellati@github.com/fabiopellati/message-exchange-event-manager.git"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable":true,
  "require": {
    "zendframework/zend-view": "^2.9",
    "zendframework/zend-db": "^2.8",
    "zendframework/zend-hydrator": "^2.2",
    "zendframework/zend-serializer": "^2.8",
    "zendframework/zend-filter": "^2.7",
    "zendframework/zend-paginator": "^2.7",
    "zfcampus/zf-apigility": "^1.3",
    "zendframework/zend-uri": "^2.5",
    "zendframework/zend-cache": "^2.7",
    "zendframework/zend-stdlib": "^3.1",
    "fabiopellati/message-exchange-event-manager": "1.0 |^2"
  },
  "require-dev": {
    "zendframework/zend-test": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "ApigilityTools\\": "src/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  },
  "extra": {
    "zf": {
      "component": [
        "ZF\\Rest",
        "ZF\\ApiProblem",
        "MessageExchangeEventManager",
        "ApigilityTools"
      ]
    }
  }
}
